<html>

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/addIndex.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/js/jquery-3.6.0.js"></script>
    <script src="/js/addAd.js"></script>
</head>

<body>
    <div class="sidebar">
        <div class="logo-details">
            <i class='bx bx-grid-alt'></i>
            <span class="logo_name">Admin Page</span>
        </div>
        <ul class="nav-links">
            <li>
                <a href="/home" class="active">
                    <i class='bx bx-pie-chart-alt-2'></i>
                    <span class="links_name">Home</span>
                </a>
            </li>

            <li>
                <a href="/vendor">
                    <i class='bx bx-cog'></i>
                    <span class="links_name">Vendor</span>
                </a>
            </li>
            <li>
                <a href="/users">
                    <i class='bx bx-user'></i>
                    <span class="links_name">User</span>
                </a>
            </li>
            <li>
                <a href="product">
                    <i class='bx bx-coin-stack'></i>
                    <span class="links_name">Product</span>
                </a>
            </li>
            <li>
                <a href="/category">
                    <i class='bx bx-book-alt'></i>
                    <span class="links_name">Category</span>
                </a>
            </li>
            <li>
                <a href="/subCategory">
                    <i class='bx bx-list-ul'></i>
                    <span class="links_name">Sub_Category</span>
                </a>
            </li>
            <li>
                <a href="/ticket">
                    <i class='bx bx-message'></i>
                    <span class="links_name">Ticket</span>
                </a>
            </li>
            <li>
                <a href="/order">
                    <i class='bx bx-heart'></i>
                    <span class="links_name">Order</span>
                </a>
            </li>
            <li>
                <a href="/ad">
                    <i class='bx bx-box'></i>
                    <span class="links_name">Ad</span>
                </a>
            </li>

            <li class="log_out">
                <a href="#">
                    <i class='bx bx-log-out'></i>
                    <span class="links_name">Log out</span>
                </a>
            </li>
        </ul>
    </div>
    <section class="home-section">
        <nav>
            <div class="sidebar-button">
                <i class='bx bx-menu sidebarBtn'></i>
                <span class="dashboard">{{title}}</span>
            </div>
            <div class="search-box">
                <input type="text" placeholder="Search Ad...">
                <i class='bx bx-search'></i>
            </div>
        </nav>

        <div class="home-content">
            <div class="sales-boxes">
                <div class="recent-sales box">
                    <div class="title">Ad Page</div><br>         
                    <div class="sales-details">
                        <form id="adForm">
                            <label>Title:</label>
                            <input type="text" id="title"><br><br>
                            <label>TargetUrl:</label>
                            <input type="text" id="targetUrl"><br><br>
                            <label>Description:</label>
                            <textarea id="description"></textarea><br><br>
                            <input type="submit" value="submit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>